<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.leagueofthetwo.babuu.products.ProductsFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_baba_says"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/baba_says"
            style="@style/babaSaysText"/>

        <TextView
        android:id="@+id/tv_baba_speech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/baba_speech"
        style="@style/babaSpeechText" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_products"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</LinearLayout>
